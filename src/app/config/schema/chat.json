{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "chat",
  "type": "object",
  "properties": {
    "_id": { "type": "string" },
    "from": { "type": "string" },
    "to": { "type": "string" },
    "date": { "type": "string" },
    "message": { "type": "string" },
    "attachments": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "size": { "type": "number" },
          "mimeType": { "type": "string" },
          "location": { "type": "string" }
        }
      }
    }
  }
}
